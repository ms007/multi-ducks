{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Jest tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/react-scripts/scripts/test.js",
      "stopOnEntry": false,
      "args": ["--runInBand", "--env=jsdom", "--transform={\"^.+\\\\.(js|jsx)$\": \"babel-jest\"}"],
      "cwd": "${workspaceRoot}",
      "preLaunchTask": null,
      "runtimeExecutable": null,
      "runtimeArgs": ["--nolazy"],
      "env": {
        "CI": "true"
      },
      "console": "internalConsole",
      "sourceMaps": true
    }
  ]
}
